@using Br.Com.EbenezerVillage.Aplicacao
@using Br.Com.EbenezerVillage.Aplicacao.Auxiliares
    
@{
    //Recupera configuração do sistema
    var config = GerenciadorDeConfiguracao.GetConfiguracoesDaMatriz(Session);
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="description" content="A melhor solução em hospedagem no litoral norte Potiguar, localizada próxima ao 
          Polo Petroquímico de Guamaré/RN, a Ebenezer Village Hotel Pousada dispõe de apartamentos novos e completos em estilo 
          flat, estacionamento privativo e uma ampla área de lazer, com piscinas adulto e infantil com hidromassagem e cascata, 
          churrasqueira, bar, restaurantes, campo de futebol, salão de jogos, WI-FI e TV à cabo.">
    <meta name="keywords" content="Hotel Pousada Guamaré Negócios Polo Petrobras">
    <title>Ebenezer Village | @Page.Title</title>
    @* FONTE *@
    <link href='http://fonts.googleapis.com/css?family=Josefin+Sans:400,600' rel='stylesheet' type='text/css'>
    @* FOLHAS DE ESTILO *@
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/Menu.css" rel="stylesheet" />
    <link href="~/Content/orbit-1.2.3.css" rel="stylesheet" />
    <link href="~/Content/overcast-theme/jquery-ui-1.9.2.custom.css" rel="stylesheet" />
    <link href="~/Content/highslide.css" rel="stylesheet" />
    @* ÍCONE *@
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @* SCRIPTS *@
    <script src="~/Scripts/modernizr-2.5.3.js"></script>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.orbit-1.2.3.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-ui-1.9.2.custom.js"></script>
    <script src="~/Scripts/highslide-with-gallery.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.maskedinput.min.js" type='text/javascript'></script>

    <script type="text/javascript">
         $(window).load(function() {
             $('#orbit-slider').orbit();
         });

        function showLoading() {
            elem = document.getElementById("loading");
            elem.style.visibility="visible";
         }
    </script>
</head>
<body>

    <div id="loading">
        <div id="loading-box">
            <img src="~/Content/Images/ajax-loader.gif" alt="Aguarde..." />
            <h3>Aguarde. Enviando e-mail...</h3>
        </div>
    </div>

    <div id="page">
        <header>
            @* IMAGEM DE TÍTULO *@
            <div id="site-title">
                <div id="title-logo">
                    <img src="/Images/logo.png" alt="Ebenezer Village" title="Ebenezer Village" />
                </div>
                <div id="title-box">
                    <h3>Reservas:</h3>
                    <h4>@config.ContatoCelular</h4>
                </div>
            </div>

            @* MENU PRINCIPAL *@
            <div id="hrzmenu" class="shaded">
                <ul>
                    <li class="@(Page.ID.Equals(Constantes.id_home) ? "active" : "")"><a href='~/matriz/home'>
                        <span>Home</span></a>
                    </li>
                    <li class="@(Page.ID.Equals(Constantes.id_pousada) ? "active has-sub" : "has-sub")">
                        <a href="~/matriz/pousada"><span>A Pousada</span></a>
                        <ul>
                            <li><a class="duplex" href='~/matriz/pousada'>
                                <span>Matriz</span><br /><span class="sub-title">(Polo Industrial)</span></a></li>
                            <li class='last'><a class="duplex" href='~/filial/pousada'>
                                <span>Filial</span><br /><span class="sub-title">(Centro)</span></a></li>
                        </ul>
                    </li>
                    <li class="@(Page.ID.Equals(Constantes.id_apartamentos) ? "active" : "")">
                        <a href="~/matriz/apartamentos"><span>Apartamentos</span></a>
                    </li>
                    <li class="@(Page.ID.Equals(Constantes.id_restaurantes) ? "active" : "")">
                        <a href="~/matriz/restaurantes"><span>Restaurantes</span></a>
                    </li>
                    <li class="@(Page.ID.Equals(Constantes.id_reservas) ? "active" : "")">
                        <a href="~/matriz/reservas"><span>Reservas & Tarifas</span></a>
                    </li>
                    <li class="@(Page.ID.Equals(Constantes.id_localizacao) ? "active has-sub" : "has-sub")">
                        <a href="~/matriz/localizacao"><span>Localização</span></a>
                        <ul>
                            <li><a class="duplex" href='~/matriz/localizacao'>
                                <span>Matriz</span><br /><span class="sub-title">(Polo Industrial)</span></a></li>
                            <li><a class="duplex" href='~/filial/localizacao'>
                                <span>Filial</span><br /><span class="sub-title">(Centro)</span></a></li>
                            <li class='last'><a href='~/matriz/guamare'><span>Guamaré/RN</span></a></li>
                        </ul>
                    </li>
                    <li class="@(Page.ID.Equals(Constantes.id_contato) ? "active last" : "last")">
                        <a href="~/matriz/contato"><span>Contato</span></a>
                    </li>
                </ul>
            </div>

            <div id="title-footer">
                <div id="title-box-footer"></div>
            </div>
        </header>

        <div id="body">
            @RenderBody()
        </div>

        <footer>
            <div id="footer-container">
                <div id="site-footer">
                    <div class="footer-logo">
                        <img class="left" src="/Images/logo.png" alt="Ebenezer Village" title="Ebenezer Village" />
                        <img class="right" src="/Images/logo_wifi.png" alt="Wi-fi Point" title="Wi-fi Point" />
                        <img class="right" src="/Images/logo_sky.png" alt="SKY TV" title="SKY TV" />
                        <img class="right" src="/Images/logo_clarotv.png" alt="Claro TV" title="Claro TV" />
                    </div>

                    <p>@config.Endereco</p>

                    <p>
                        Telfax: @config.ContatoTelefone | Cel: @config.ContatoCelular<br />
                        <a href="mailto:@config.ContatoEmail">@config.ContatoEmail</a>
                    </p>

                    <div class="last">
                        <p>Site by <a href="http://www.lunaware.com.br" title="Lunaware Web Solutions" target="_blank">
                            Lunaware Web Solutions</a></p>
                    </div>

                    <div class="clear"></div>
                </div>

                <div id="footer-label">
                    <p>&copy; @DateTime.Now.Year Ebenezer Village Hotel Pousada</p>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>